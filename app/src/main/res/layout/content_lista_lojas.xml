<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_layout"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/colorBackground"
    android:elevation="4dp"
    android:outlineProvider="bounds"


    >


    <TextView
        android:id="@+id/txtTituloFechados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:text="Fechados"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/imgLoja"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        />

    <TextView
        android:id="@+id/txtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTituloFechados"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/imgLoja"
        android:fontFamily="sans-serif"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="sfdsf"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView

        android:id="@+id/txtEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNome"
        android:layout_below="@+id/txtNome"
        android:fontFamily="sans-serif"
        android:gravity="bottom"
        android:paddingTop="12dp"
        android:text="@null"
        android:textSize="12sp" />

    <TextView

        android:id="@+id/txtBairro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNome"
        android:layout_below="@+id/txtEnd"
        android:fontFamily="sans-serif"
        android:gravity="bottom"
        android:paddingBottom="5dp"
        android:text="@null"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtHrFunc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNome"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif"
        android:lineSpacingMultiplier="1.2"
        android:paddingBottom="5dp"

        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgCabo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/txtNome"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_marginRight="16dp"
        android:padding="6dp"

        android:src="@drawable/ic_usb_cable_icon_36dp"

        />

    <ImageView
        android:id="@+id/imgWifi"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/txtNome"

        android:layout_toLeftOf="@id/imgCabo"
        android:layout_toStartOf="@id/imgCabo"


        android:padding="5dp"
        android:src="@drawable/ic_wifi"

        />


    <ImageView
        android:id="@+id/imgWalking"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_alignParentBottom="true"

        android:layout_alignParentRight="true"

        android:layout_marginRight="16dp"
        android:paddingBottom="8dp"
        android:src="@drawable/ic_directions_walk_black_24dp" />

    <TextView
        android:id="@+id/txtDist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtHrFunc"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/imgWalking"
        android:fontFamily="sans-serif"
        android:paddingBottom="5dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />


</RelativeLayout>
