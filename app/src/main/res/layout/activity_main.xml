<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corDeFundo"
    tools:context=".MainActivity">

    <include

        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"


        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/app_bar"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:paddingBottom="12dp"
        app:pstsDividerColor="@color/colorPrimary"
        app:pstsIndicatorColor="@color/colorAccent"
        app:pstsIndicatorHeight="3dp"


        app:pstsShouldExpand="true" />


    <hmdugin.acheibateria.adapter.CustomViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabs"
        android:layout_weight="1"

        />


    <ProgressBar
        android:id="@+id/barraLoading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="true"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barraLoading"
        android:layout_centerHorizontal="true"
        android:text="@string/loading"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimary"
        android:visibility="visible" />


</RelativeLayout>
